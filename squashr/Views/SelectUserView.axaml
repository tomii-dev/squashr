<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 FontFamily="Gidole" x:Class="squashr.Views.SelectUserView">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="10*"/>	
			<RowDefinition Height="40*" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBlock Text="select user" HorizontalAlignment="Center"
			FontSize="36" Margin="20" Grid.Row="0"/>
		<ItemsControl Items="{Binding Users}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel HorizontalAlignment="Center" Grid.Row="1" 
								VerticalAlignment="Top" Orientation="Horizontal" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>
	</Grid>
</UserControl>