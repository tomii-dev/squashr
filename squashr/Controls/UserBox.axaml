<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 FontFamily="Gidole" x:Class="squashr.Controls.UserBox">
	<Button Name="Button" CornerRadius="10" Background="#bfd4d6"
			HorizontalAlignment="Center" Padding="10" Width="200" Height="250"
			Margin="30">
		<StackPanel>
			<Image Name="Pfp" Width="200" Height="200" VerticalAlignment="Top"/>
			<TextBlock Name="Username" HorizontalAlignment="Center" FontSize="26"/>
		</StackPanel>
	</Button>
</UserControl>